@page "/"
@using TaskNetic.Components.Layout

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing Page</title>
    <link rel="stylesheet" href="app.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<section class="hero-section text-dark text-center p-5">
    <div class="container">
        <h1 class="display-4">Welcome to TaskNetic</h1>
        <p class="lead">The ultimate solution for organizing your tasks.</p>
        <a href="#cta" class="btn btn-lg btn-dark mt-3">Get Started</a>
    </div>
</section>

<section id="features" class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-4">Features</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">It's totally free!</h5>
                        <p class="card-text">Who doesn't like free things? At TaskNetic we ensure everyone gets their fair share of task organizing completly for free!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Freedom of movement</h5>
                        <p class="card-text">Change your content and manipulate the cards fully. At TaskNetic we provide a flexible layout so you can fully focus on task organizing.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Be your own boss</h5>
                        <p class="card-text">Add and remove users to your projects and boards. Manage who has a right to edit, modify or view the contents.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="cta" class="text-center p-5">
    <div class="container">
        <h2>Ready to take the next step?</h2>
        <p class="lead">Sign up today and see how TaskNetic can make a difference.</p>
        <a href="/account/register" class="btn btn-dark btn-lg mt-3">Sign Up Now</a>
    </div>
</section>

